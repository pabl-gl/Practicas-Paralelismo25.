CC = gcc
MPICC = mpicc

SRC_MANDELPAR = mandelpar.c
SRC_MANDELSEC = mandelsec.c

EXEC_MANDELPAR = mandelpar
EXEC_MANDELSEC = mandelsec

all: $(EXEC_MANDELPAR) $(EXEC_MANDELSEC)

$(EXEC_MANDELPAR): $(SRC_MANDELPAR)
	$(MPICC) $(SRC_MANDELPAR) -o $(EXEC_MANDELPAR)

$(EXEC_MANDELSEC): $(SRC_MANDELSEC)
	$(CC) $(SRC_MANDELSEC) -o $(EXEC_MANDELSEC)

clean:
	rm -f $(EXEC_MANDELPAR) $(EXEC_MANDELSEC)
